{{!-- if in the form you want to upload any kind of files (images, music, etc.) you need 
to add enctype="multipart/form-data" --}}
<form action="/rooms/create-room" method="POST" enctype="multipart/form-data">
  
  <label for="">Name</label>
  <input type="text" name="name" id="">

  <label for="">Description</label>
  <textarea name="description" id="" cols="30" rows="10"></textarea>
  
  <label for="">Upload image</label>
  <input type="file" name="imageURL" id="">

  <button type="submit">Create room</button>

</form>